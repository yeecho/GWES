<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/edt_user"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@+id/img_user"
        app:layout_constraintBottom_toBottomOf="@+id/img_user"
        app:layout_constraintLeft_toRightOf="@+id/img_user"/>
    <ImageView
        android:id="@+id/img_pswd"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_lock"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_user"
        app:layout_constraintRight_toRightOf="@id/img_user"
        app:layout_constraintTop_toBottomOf="@+id/img_user"/>
    <EditText
        android:id="@+id/edt_pswd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/img_pswd"
        app:layout_constraintBottom_toBottomOf="@+id/img_pswd"
        app:layout_constraintLeft_toRightOf="@+id/img_pswd"/>

    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_pswd"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_forgot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_login_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="------ 或用其他账号登录 ------"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/img_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_qq"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_tips"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_wechat"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/img_qq"
        app:layout_constraintLeft_toLeftOf="@+id/img_qq"
        app:layout_constraintRight_toRightOf="@+id/img_qq"/>

    <ImageView
        android:id="@+id/img_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_wechat"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_tips"
        app:layout_constraintLeft_toRightOf="@+id/img_qq"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/img_wechat"
        app:layout_constraintLeft_toLeftOf="@+id/img_wechat"
        app:layout_constraintRight_toRightOf="@+id/img_wechat"/>
</androidx.constraintlayout.widget.ConstraintLayout>